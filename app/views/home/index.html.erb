<div class="min-h-screen bg-gray-100">
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold text-primary" href="/">
        <i class="bi bi-book me-2"></i>Book Sharing
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "Books", books_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Users", users_path, class: "nav-link" %>
          </li>
        </ul>
        <div class="d-flex">
          <%= link_to "Sign In", "#", class: "btn btn-outline-primary me-2" %>
          <%= link_to "Sign Up", "#", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="bg-light py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <h1 class="display-4 fw-bold mb-4">Share Your Love for Books</h1>
          <p class="lead text-muted mb-4">
            Join our community of book lovers. Share your favorite books, discover new ones, and connect with fellow readers.
          </p>
          <div class="d-grid gap-2 d-md-flex">
            <%= link_to "Browse Books", books_path, class: "btn btn-primary btn-lg px-4 me-md-2" %>
            <%= link_to "Learn More", "#features", class: "btn btn-outline-secondary btn-lg px-4" %>
          </div>
        </div>
        <div class="col-lg-6 d-none d-lg-block">
          <img src="https://images.unsplash.com/photo-1507842217343-583bb7270b66?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80"
               alt="Books" class="img-fluid rounded shadow-lg">
        </div>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div id="features" class="py-5">
    <div class="container">
      <h2 class="text-center mb-5">Why Choose Book Sharing?</h2>
      <div class="row g-4">
        <div class="col-md-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
              <div class="d-flex justify-content-center mb-3">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 4rem; height: 4rem;">
                  <i class="bi bi-book fs-4"></i>
                </div>
              </div>
              <h3 class="card-title h5">Share Books</h3>
              <p class="card-text text-muted">
                Share your favorite books with the community and get personalized recommendations.
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
              <div class="d-flex justify-content-center mb-3">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 4rem; height: 4rem;">
                  <i class="bi bi-search fs-4"></i>
                </div>
              </div>
              <h3 class="card-title h5">Discover</h3>
              <p class="card-text text-muted">
                Find new books based on your interests and reading history.
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
              <div class="d-flex justify-content-center mb-3">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 4rem; height: 4rem;">
                  <i class="bi bi-people fs-4"></i>
                </div>
              </div>
              <h3 class="card-title h5">Connect</h3>
              <p class="card-text text-muted">
                Connect with other readers and share your thoughts about books.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Section -->
  <div class="bg-primary text-white py-5">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-4 mb-4 mb-md-0">
          <h2 class="display-4 fw-bold">1,000+</h2>
          <p class="lead">Books Shared</p>
        </div>
        <div class="col-md-4 mb-4 mb-md-0">
          <h2 class="display-4 fw-bold">500+</h2>
          <p class="lead">Active Users</p>
        </div>
        <div class="col-md-4">
          <h2 class="display-4 fw-bold">50+</h2>
          <p class="lead">Daily Reviews</p>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
          <h2 class="mb-4">Ready to Start Sharing?</h2>
          <p class="lead text-muted mb-4">
            Join our community today and start sharing your love for books with others.
          </p>
          <%= link_to "Get Started", "#", class: "btn btn-primary btn-lg px-5" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-light py-4 mt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <p class="mb-0">&copy; 2024 Book Sharing. All rights reserved.</p>
        </div>
        <div class="col-md-6 text-md-end">
          <%= link_to "About", "#", class: "text-decoration-none text-muted me-3" %>
          <%= link_to "Contact", "#", class: "text-decoration-none text-muted me-3" %>
          <%= link_to "Privacy Policy", "#", class: "text-decoration-none text-muted" %>
        </div>
      </div>
    </div>
  </footer>

  <% content_for :head do %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <% end %>
</div>
